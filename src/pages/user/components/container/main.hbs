<div class="profile">
	{{{avatar}}}
	<p  style="text-align: center" class="profile__name">{{first_name}}</p>
	<div class="profile__user-info">
		<div class="profile__info-container">
			<div>
				<p>Почта</p>
				<p>{{email}}</p>
			</div>
			<div>
				<p>Логин</p>
				<p>{{login}}</p>
			</div>
			<div>
				<p>Имя</p>
				<p>{{first_name}}</p>
			</div>
			<div>
				<p>Фамилия</p>
				<p>{{second_name}}</p>
			</div>
			<div>
				<p>Имя в чате</p>
				<p>{{display_name}}</p>
			</div>
			<div>
				<p>Телефон</p>
				<p>{{phone}}</p>
			</div>
		</div>
		<div class="profile__info-change">
			{{{dataLink}}}
			{{{passLink}}}
			{{{goToMain}}}
			{{{exitLink}}}
		</div>
	</div>
</div>
