<div class="icon"></div>
<form onsubmit="return false">
	<label for="old_password">Старый пароль</label>
	<input id="old_password" name="old_password" type="password" required>
	<label for="new_password">Новый пароль</label>
	<input id="new_password" name="new_password" type="password" pattern="\w{8,}" required>
	<label for="new_password_repeat">Повторите новый пароль</label>
	<input id="new_password_repeat" name="new_password_repeat" type="password" required>
	{{{button}}}
</form>