<form onsubmit="return false">
	<p>Регистрация</p>
	<label for="email">Почта</label>
	<input id="email" name="email" type="email" required>
	<label for="login">Логин</label>
	<input id="login" name="login" type="text" required>
	<label for="first_name">Имя</label>
	<input id="first_name" name="first_name" type="text" required>
	<label for="second_name">Фамилия</label>
	<input id="second_name" name="second_name" type="text" required>
	<label for="phone">Телефон</label>
	<input id="phone" name="phone" type="tel" required>
	<label for="password">Пароль</label>
	<input id="password" name="password" type="password" pattern="\w{8,}" required>
	<label for="password_repeat">Пароль (ещё раз)</label>
	<input id="password_repeat" name="password_repeat" type="password" required>
	{{{button}}}
	<a class="link">Войти</a>
</form>
		