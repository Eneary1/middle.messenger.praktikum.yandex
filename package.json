    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "node-sass": "^7.0.3"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "^1.0.9",
    "@parcel/transformer-inline-string": "^2.7.0",
    "@parcel/transformer-sass": "^2.7.0",
    "assert": "^2.0.0",
    "events": "^3.3.0",
    "nodemon": "^2.0.20",
    "os-browserify": "^0.3.0",
    "parcel": "^2.7.0",
    "path-browserify": "^1.0.1",
