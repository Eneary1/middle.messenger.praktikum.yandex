{
  "name": "practicum",
  "version": "~1.0.0",
  "description": "",
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "scripts": {
    "start": "node server/server.js",
    "dev": "npm run scss && parcel static/index.html -p 3000",
